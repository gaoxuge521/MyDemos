<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomShapeImageView">
        <attr name="customshape" format="integer">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
            <enum name="arc" value="3" />
        </attr>
        <attr name="customimageBorderWidth" format="dimension" />
        <attr name="customborderColor" format="color" />
        <attr name="customroundRadius" format="dimension" />
        <attr name="customleftTopRadius" format="dimension" />
        <attr name="customrightTopRadius" format="dimension" />
        <attr name="customrightBottomRadius" format="dimension" />
        <attr name="customleftBottomRadius" format="dimension" />
        <attr name="customonlyDrawBorder" format="boolean" />
    </declare-styleable>


    <declare-styleable name="Circle">
        <attr name="circleBackground" format="integer" />
        <attr name="firstChildPosition">
            <enum name="East" value="0" />
            <enum name="South" value="90" />
            <enum name="West" value="180" />
            <enum name="North" value="270" />
        </attr>
        <attr name="rotateToCenter" format="boolean" />
        <attr name="isRotating" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="name" format="string" />
    </declare-styleable>
</resources>